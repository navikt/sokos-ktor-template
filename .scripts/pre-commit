#!/bin/bash
echo "*********************************************************"
echo "Running git pre-commit hook. Running Ktlint... "
echo "*********************************************************"

# Gather the staged files - to make sure changes are saved only for these files.
stagedFiles=$(git diff --staged --name-only)

# run ktlintMainSourceSetCheck apply
./gradlew ktlintFormat
./gradlew ktlintMainSourceSetCheck

status=$?

if [ "$status" = 0 ] ; then
    echo "Ktlintformat - nothing to format"
    # Add staged file changes to git
    for file in $stagedFiles; do
      if test -f "$file"; then
        git add $file
      fi
    done
    #Exit
    exit 0
else
    echo "*********************************************************"
    echo "       ********************************************      "
    echo 1>&2 "Ktlintformat - found violations it could not fix."
    echo "Run (ktlintFormat) in your terminal and fix the issues before trying to commit again."
    echo "       ********************************************      "
    echo "*********************************************************"
    #Exit
    exit 1
fi